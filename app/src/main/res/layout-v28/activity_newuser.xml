<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".newuser">

    <TextView
        android:id="@+id/newUserlbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_user"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="158dp"
        android:layout_height="133dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021"
        app:srcCompat="@drawable/logoconected"
        tools:ignore="ContentDescription" />

    <Spinner
        android:id="@+id/languageSelection"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:prompt="@string/selectLanguage"
        android:entries="@array/languageSelected"
        android:spinnerMode="dropdown"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.299" />

    <EditText
        android:id="@+id/newUserNameField"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:lastBaselineToBottomHeight="20dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        android:importantForAutofill="no"
        android:inputType="text"
        tools:ignore="LabelFor" />


    <EditText
        android:id="@+id/newUserPlateField"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="@string/plate_name"
        android:lastBaselineToBottomHeight="20dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/newUserEmailField"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="@string/email_name"
        android:inputType="textEmailAddress"
        android:lastBaselineToBottomHeight="20dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        android:importantForAutofill="no" />


    <EditText
        android:id="@+id/newUserPassField"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="@string/password_name"
        android:inputType="textPassword"
        android:lastBaselineToBottomHeight="20dp"
        android:textColor="@android:color/black"
        android:drawableEnd="@drawable/showpass"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/newUserPassConField"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:drawableEnd="@drawable/showpass"
        android:lastBaselineToBottomHeight="20dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="320dp"
        android:layout_height="57dp"
        android:background="@drawable/rounded_corners"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.899" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:buttonTint="@android:color/black"
        android:lineHeight="10dp"
        android:text="@string/accept_terms"
        android:textColor="@android:color/black"
        android:textSize="9sp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/terminos"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:buttonTint="@android:color/holo_blue_dark"
        android:lineHeight="10dp"
        android:text="@string/terms_privacy"
        android:textColor="#0277BD"
        android:textSize="6sp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/checkBox"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintHorizontal_bias="0.040"
        tools:ignore="SmallSp,UnusedAttribute"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="389dp"
        android:layout_height="31dp"
        android:layout_marginStart="4dp"
        android:text="@string/password_strong"
        android:textColor="@android:color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>