<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sendnotification_fragment"
    tools:context=".ui.sendNotifications.sendNotification">

    <EditText
        android:id="@+id/targetUser"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:hint="@string/targetUserSend"
        android:textSize="15sp"
        android:inputType="text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153"
        tools:ignore="Autofill" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/asuntos"
        android:minHeight="48dp"
        android:spinnerMode="dropdown"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/targetUser"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23" />

    <TextView
        android:id="@+id/selectedSubject"
        android:layout_width="359dp"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:inputType="text"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23"
        tools:ignore="TextViewEdits,UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/imageSelected"
        android:layout_width="359dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:drawableStart="@drawable/imageicon"
        android:hint="@string/imageSelectLbl"
        android:inputType="text"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31"
        tools:ignore="TextViewEdits,UseCompatTextViewDrawableXml" />

    <EditText
        android:id="@+id/notificationMessage"
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="180dp"
        android:autofillHints="@string/targetUser"
        android:background="@drawable/shape"
        android:gravity="top"
        android:hint="@string/targetMessage"
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:singleLine="false"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageSelected"
        app:layout_constraintTop_toBottomOf="@+id/imageSelected"
        app:layout_constraintVertical_bias="0.216"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <TextView
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="47dp"
        android:layout_marginRight="20dp"
        android:drawableEnd="@drawable/ic_sendicon"
        android:onClick="sendNotification"
        android:textStyle="bold"
        android:text="@string/sendText"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="@+id/notificationMessage"
        app:layout_constraintTop_toBottomOf="@+id/notificationMessage"
        app:layout_constraintVertical_bias="0.084"
        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />

</androidx.constraintlayout.widget.ConstraintLayout>