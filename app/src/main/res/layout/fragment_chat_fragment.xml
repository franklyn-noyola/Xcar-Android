<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_fragment"
    android:background="@drawable/sand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ui.Chat.fragment_chat">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="#2167F3"
        app:backgroundTint="#2167F3"
        android:clickable="true"
        android:src="@drawable/ic_send_24px"
        android:tint="@android:color/white"
        app:fabSize="mini"/>

    <EditText
        android:id="@+id/input"
        android:layout_width="280dp"
        android:layout_height="139dp"
        android:layout_below="@+id/list_of_messages"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-42dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/fab"
        android:gravity="bottom"
        android:inputType="textMultiLine"
        android:isScrollContainer="true"
        android:maxLines="10"
        android:overScrollMode="always"
        android:paddingLeft="5dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:singleLine="false"
        tools:ignore="Autofill,LabelFor,RtlHardcoded,RtlSymmetry" />

    <ImageButton
        android:id="@+id/buttonImage"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_marginStart="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/imageicon"
        android:inputType="text"
        tools:ignore="ContentDescription" />
    <ImageButton
        android:id="@+id/buttonCamera"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_marginStart="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/ic_menu_camera"
        android:inputType="text"
        tools:ignore="ContentDescription" />

    <ListView
        android:id="@+id/list_of_messages"
        android:layout_width="wrap_content"
        android:layout_height="745dp"
        android:layout_above="@id/fab"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/sand"
        android:divider="@android:color/transparent"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll" />
</RelativeLayout>
